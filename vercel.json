{
  "version": 2,
  "builds": [
    {
      "src": ".storybook",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "storybook-build" },
      "scale": 1,
      "use": "@vercel/static-build",
      "config": { "zeroConfig": true }
    },
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/storybook/(.*)",
      "dest": "/storybook-build/$1"
    },
    {
      "src": "/",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "github": {
    "mainBranch": "main",
    "autoAlias": true,
    "deploymentBranches": ["main", "qa"]
  }
}
