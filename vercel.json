{
  "version": 2,
  "builds": [
    {
      "src": ".storybook",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "storybook-build" }
    },
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { "src": "/storybook/(.*)", "dest": "/storybook-build/$1" },
    { "src": "/(.*)", "dest": "/" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "postcss": {
      "plugins": {
        "postcss-import": {},
        "tailwindcss": {},
        "autoprefixer": {}
      }
    }
  },
  "github": {
    "mainBranch": "main",
    "autoAlias": true
  }
}
